<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/item_fruit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <TextView
        android:id="@+id/item_kcal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:textSize="16sp"
        android:fontFamily="@font/jf"/>
    <TextView
        android:id="@+id/item_vitaminA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:textSize="16sp"
        android:fontFamily="@font/jf"/>
    <TextView
        android:id="@+id/item_vitaminC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:textSize="16sp"
        android:fontFamily="@font/jf"/>
    <TextView
        android:id="@+id/item_vitaminE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:textSize="16sp"
        android:fontFamily="@font/jf"/>
    <TextView
        android:id="@+id/item_fiber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:textSize="16sp"
        android:fontFamily="@font/jf"/>
    <TextView
        android:id="@+id/item_sugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:textSize="16sp"
        tools:ignore="RtlHardcoded"
        android:fontFamily="@font/jf"/>



    <TextView
        android:id="@+id/item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>